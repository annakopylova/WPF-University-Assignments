<Window x:Class="Library.Views.EditVisit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="Комментарии к посещению" Height="283" Width="400">
    <StackPanel>
        <Label Content="Комментарии"/>
        <TextBox Height="25" Name="comments"/>
        <Button Margin="0,0,0,0" Height="40" Content="Обновить" x:Name="addVisit" Click="AddVisit_Click"/>
        <Button Margin="0,0,0,0" Height="40" Content="Удалить" x:Name="deleteVisit" Click="DeleteVisit_Click"/>
    </StackPanel>
</Window>
